
<h1>User Login Page</h1>
<br>
<% if flash[:error_messages] %>
    <% flash[:error_messages].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for :auth do |f| %>
    <%= f.label "Username" %>
    <%= f.text_field :username %>
    <%= f.label "Password" %>
    <%= f.password_field :password %>

    <br>
    <%= f.submit "Login" %>
<% end %>
<br>
<%= button_to "Signup", signup_path, method: :get %>