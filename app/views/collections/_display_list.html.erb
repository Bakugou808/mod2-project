<% if lists.class == String %>
    <br>
    <br>
    <br>
   <%= lists %>

<% else %>
   
    <% lists.each do |item| %>

        <%= link_to item.name, collection_path(item.collections[0].id) %>
        <br>
        <%= item.flavors %>
        <br>
        <% item.effects.split("||").each do |effect| %>
            <%= effect %>
            <br>
        <% end %>
        <br>
    <% end %>
    
<% end %>