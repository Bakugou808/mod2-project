<% if flash[:error_messages] %>
    <% flash[:error_messages].each do |error| %>
        <%= error %>
    <% end %>
<% end %>
<ul>
<%= form_for user do |f| %>
    <%= f.label "Username" %>
    <%= f.text_field :username %>
    <br>
    <%= f.label "Password" %>
    <%= f.password_field :password %>
    <br>
    <%= f.label "Confirm Password" %>
    <%= f.password_field :password_confirmation %>
    <br>
    <br>
    <br>
    <%= f.label "Interests" %>
    <%= f.text_area :interests, size: "60x4" %>
    <br>
    <%= f.label "Favorites" %>
    <%= f.text_area :favorites, size: "60x4" %>
    <br>
    <%= f.submit %>
<% end %>
</ul>